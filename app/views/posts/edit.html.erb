<div class="d-flex justify-content-center my-4">
  <%= link_to 'Home', root_path, class: 'btn btn-primary' %>
</div>

<h1 class="mb-4">Edit Post</h1>

<%= form_for @post, html: { class: 'needs-validation', novalidate: true } do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
            <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field mb-3">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_area :title, class: 'form-control', rows: 3 %>
    </div>

    <div class="field mb-3">
        <%= f.label :content, class: 'form-label' %>
        <%= f.text_area :content, class: 'form-control', rows: 6 %>
    </div>

    <div class="actions">
        <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
    </div>

    <div class="mt-3">
        <%= link_to 'Back', post_path(@post), class: 'btn btn-outline-secondary' %>
    </div>
<% end %>
