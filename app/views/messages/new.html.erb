<h1 class="mb-4">New Message</h1>
<%= form_with(model: @message, local: true) do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>
      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :sender_id, "Select a sender:" %>
    <%= form.collection_select :sender_id, User.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :receiver_id, "Select a receiver:" %>
    <%= form.collection_select :receiver_id, User.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :content, "Message Content:" %>
    <%= form.text_area :content, placeholder: 'Type your message here' %>
  </div>

  <div class="actions">
    <%= form.submit 'Send Message' %>
  </div>
<% end %>
