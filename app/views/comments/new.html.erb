<div class="d-flex justify-content-center my-4">
<%= link_to 'Home', root_path, class: 'btn btn-info' %>
</div>

<!-- Heading for the new comment section -->
<h1 class="mb-4">New Comment</h1>

<!-- Error Messages -->
<% if @comment.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <!-- Error count -->
    <h2>
      <%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:
    </h2>

    <!-- Error list -->
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="text-center">
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
  <p class="text-muted">Posted by <%= @post.user.name %> on <%= @post.created_at.strftime("%B %d, %Y") %></p>
</div>

<!-- Comment Form -->
<%= form_for [@post, @comment], url: post_comments_path(@post), html: { class: 'needs-validation', novalidate: true } do |f| %>
  <div class="mb-3">
    <%= f.label :Comment, class: 'form-label' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="actions mb-3">
    <%= f.submit 'Submit Comment', class: 'btn btn-primary' %>
  </div>
  
  <div class="actions mb-3">
    <%= link_to 'Back to Post', post_path(@post), class: 'btn btn-primary' %>
  </div>
<% end %>

<!-- Existing comments -->
<% if @post.comments.any? %>
  <div class="mt-4 mb-2 text-center">
    <h2>Comments</h2>
  </div>
  <% @post.comments.each do |comment| %>
    <div class="card mb-2">
      <div class="card-body">
        <strong>Commenter:</strong> <%= comment.user.name %>
        <p class="card-text"><%= comment.content %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-center">No comments yet.</p>
<% end %>