<div class="d-flex justify-content-center my-4">
  <% if user_signed_in? %>
  <%= link_to 'Home', user_path(current_user) %>
  <% else %>
  <%= link_to 'Home', root_path %>
  <% end %>

</div>


<div class="container mt-4">
  <h1>All Messages</h1>

  <div class="row">
    <div class="col-md-6">
      <h2>Sent Messages</h2>
      <% @sent_messages.each do |message| %>
        <div class="card mb-2">
          <div class="card-body">
            <%= message.content %>
            <p class="text-muted">To: <%= message.receiver.name %></p>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-6">
      <h2>Received Messages</h2>
      <% @received_messages.each do |message| %>
        <div class="card mb-2">
          <div class="card-body">
            <%= message.content %>
            <p class="text-muted">From: <%= message.sender.name %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
