<!-- app/views/users/edit.html.erb -->

<div class="d-flex justify-content-center my-4">
  <%= link_to 'Home', root_path, class: 'btn btn-primary' %>
</div>

<div class="container my-5">
  <h1>Edit User</h1>

  <%= form_with model: @user, local: true, class: 'needs-validation', novalidate: true do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-warning" role="alert">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Show', @user, class: 'btn btn-outline-primary me-2' %> 
    <%= link_to 'Back', users_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>
