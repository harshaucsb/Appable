<div class="d-flex justify-content-center">
  <%= link_to 'Home', root_path, class: 'btn btn-outline-primary btn-sm me-2' %>
  <%= link_to 'My Profile', user_path(current_user), class: 'btn btn-outline-primary btn-sm me-2' %>
</div>

<div class="container mt-4">
  <h1>Users</h1>

  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <% if user_signed_in? && current_user==user %>
            <td><%= user.name.titleize + " (You)" %></td>
          <% else %>
            <td><%= user.name.titleize %></td>
          <% end %>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: 'btn btn-outline-primary btn-sm' %></td>
          <td><%= link_to 'Message', new_message_path(friend_id: user.id), class: 'btn btn-outline-primary btn-sm' %></td>
          <% if user_signed_in? && current_user==user %>
            <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-secondary btn-sm' %></td>
            <td>
              <%= button_to 'Destroy', user_path(user), 
                            method: :delete, 
                            class: 'btn btn-outline-danger btn-sm',
                            data: { turbo_confirm: "Are you sure?" } %>
          <% else %>
            <% if %>
              <td><%= button_to 'Follow', add_friend_path(current_user), method: :post, params: { friend_id: user.id }, class: 'btn btn-outline-primary btn-sm' %></td>
            <% else %>
              <td><%= button_to 'Unfollow', remove_friend_path(current_user), method: :delete, params: { friend_id: user.id }, class: 'btn btn-outline-danger btn-sm' %></td>
            <% end %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

